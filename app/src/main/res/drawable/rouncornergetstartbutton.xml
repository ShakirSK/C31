<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#5b5b5b"/>
            <stroke
                    android:width="2dp"
                    android:color="#5b5b5b"/>
            <corners
                    android:radius="50dp"/>
            <padding
                    android:bottom="15dp"
                    android:left="30dp"
                    android:right="30dp"
                    android:top="15dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                    android:angle="270"
                    android:endColor="#FFFFFF"
                    android:startColor="#FFFFFF"/>
            <stroke
                    android:width="4dp"
                    android:color="#FFFFFF"/>
            <corners
                    android:radius="50dp"/>
            <padding
                    android:bottom="15dp"
                    android:left="30dp"
                    android:right="30dp"
                    android:top="15dp"/>
        </shape>
    </item>
</selector>